{
  "info": {
    "_postman_id": "b3f8f9e0-1234-5678-9abc-def012345678",
    "name": "Clinic API",
    "description": "Collection for testing the Clinic Management API.\nIncludes Auth flow automation.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Register Physician",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"dr.strange@clinic.com\",\n    \"fullName\": \"Stephen Strange\",\n    \"password\": \"SuperSecret1!\",\n    \"medicalLicenseId\": \"LIC-123456\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/physicians/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "physicians",
            "register"
          ]
        }
      },
      "response": []
    },
    {
      "name": "2. Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "if (jsonData.accessToken) {",
              "    pm.collectionVariables.set(\"accessToken\", jsonData.accessToken);",
              "    console.log(\"Login Successful. Access Token stored.\");",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"dr.strange@clinic.com\",\n    \"password\": \"SuperSecret1!\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "login"
          ]
        }
      },
      "response": []
    },
    {
      "name": "3. Get Profile (Me)",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{accessToken}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/physicians/me",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "physicians",
            "me"
          ]
        }
      },
      "response": []
    },
    {
      "name": "4. Refresh Token",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "if (jsonData.accessToken) {",
              "    pm.collectionVariables.set(\"accessToken\", jsonData.accessToken);",
              "    console.log(\"Token Refreshed. New Access Token stored.\");",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "auth": {
          "type": "noauth"
        },
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/auth/refresh",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "refresh"
          ]
        },
        "description": "Sends the HttpOnly Cookie automatically. No Bearer Header needed."
      },
      "response": []
    },
    {
      "name": "5. Logout",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    pm.collectionVariables.set(\"accessToken\", \"\");",
              "    console.log(\"Logged out. Access Token cleared from variables.\");",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{accessToken}}",
              "type": "string"
            }
          ]
        },
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/auth/logout",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "logout"
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    }
  ]
}