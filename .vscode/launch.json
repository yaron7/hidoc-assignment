{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "NestJS: Debug (via npm)", 
      "runtimeExecutable": "npm", 
      "runtimeArgs": [
        "run",
        "start:debug" 
      ],
      "console": "integratedTerminal", 
      "sourceMaps": true, 
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "outputCapture": "std", // Capture stdout/stderr
      // The port used by Node's inspector protocol (usually 9229)
      // 'pwa-node' often detects this automatically from --inspect flag
      "port": 9229,
      // Restart the debugging session if nodemon restarts the server
      "restart": true
    },
  ]
}